{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/**/*.d.ts"  // Inclui a pasta onde o arquivo global.d.ts est√° localizado
, ".next/types/app/about-me/page.tsx", ".next/types/app/work/eir/page.tsx", ".next/types/app/what-i-do/page.tsx", ".next/types/app/work/page.tsx", ".next/types/app/page.tsx"  ],
  "exclude": ["node_modules"]
}
